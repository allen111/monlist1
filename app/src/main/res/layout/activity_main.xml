<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.di.walker.allen.simplepokedex1.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inserisci_nome_o_numero"
        android:id="@+id/searchBox"
        android:layout_gravity="top"
        android:layout_margin="16dp"
        android:imeActionLabel="@android:string/search_go"
        android:imeActionId="@android:integer/config_shortAnimTime"
        android:imeOptions="actionSearch"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="goto list"
        android:id="@+id/listButton"
        android:layout_gravity="top"
        android:layout_margin="16dp"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/searchButton"
        android:layout_gravity="top"
        android:layout_margin="16dp"


        />
    <ProgressBar
        android:id="@+id/progressB"
        android:layout_width="120dp"
        android:layout_height="120dp"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="top|center"
        android:layout_margin="20dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/pkmn_detail1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/pkmn_name"
            android:text="@string/snorlax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pkmn_front"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/pkmn_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pkmn_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pkmn_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pkmn_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pkmn_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pkmn_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</GridLayout>
